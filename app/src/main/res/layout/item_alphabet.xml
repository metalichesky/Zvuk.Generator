<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginHorizontal="4dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cbxAlphabet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_checkbox_selector"
        android:button="@null" />

    <TextView
        android:id="@+id/tvAlphabet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="18dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:textSize="22sp"
        android:textColor="@color/item_button_color"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvAlphabetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="@string/alphabet_name"
        android:textColor="@color/item_button_color"
        android:textSize="10sp" />

    <FrameLayout
        android:id="@+id/flAlphabet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="4dp"/>
</FrameLayout>